@model IEnumerable<SampleApp.ViewModels.MyTaskViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-6">
        
        <br/><h2>My To Do List</h2><hr/><br/>

        <div class="well well-lg">
        <br/><br/>

            <div class="table-responsive">
                <table class="table table-condensed" id="ItemsTableId">
                    @*<tr>
                       <th colspan="2"><h3>Task Content</h3></th>
                    </tr>*@
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaskToDo)
                            </td>
                            @*<td>
                                TODO: Edit Action
                                <span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </td>*@
                            <td>
                                <a href="@Url.Action("RemoveItem", "Home", new { name = item.Name, id = item.Id } )" title="Remove this task">
                                    <span class="glyphicon glyphicon-remove removeIcon" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        
            <div class="row">
                @using (Html.BeginForm("AddItem", "Home", FormMethod.Post, new { @class = "navbar-form" }))
                {
                    <div class="col-sm-5">  
                        @Html.Editor("NewTask", new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                @placeholder = "Enter a new task",
                            }
                        })
                
                    </div>      
                    <div class="col-sm-2">          
                        <button type="submit" class="btn btn-default" title="Add a new task">Add Task</button>
                    </div>
                }
            </div>
        </div> 
    </div>
</div>


